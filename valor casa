valor_casa = float(input("digite o valor da casa:"))
salário = float(input("digite se salário mensal:"))
anos_pagar = int(input("digite o valor o número de anos para pagar:"))

# calcular o número de meses para pagar
meses_pagar = anos_pagar * 12

# calcular a parcela mensal 
parcela_mensal = valor_casa / meses_pagar

# calcular 30% de salário
max_parcela = salário * 0.3

# verificar se a parcela mensal está dentro do limite
if parcela_mensal < max_parcela:
 print("empréstimo aprovado!")
 print(f"parcela mensal: R$ {parcela_mensal:.2f}")
 
else:
   print("empréstimo não aprovado. Parcela mensal excede 30% do seu salário")
